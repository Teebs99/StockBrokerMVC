@model IEnumerable<Models.OrderListItem>

@{
    ViewBag.Title = "Index";
}

<h2>List of Orders</h2>

<p>
    <button class="btn btn-primary">@Html.ActionLink("Create New", "Create", null, new {style="color: white" }) </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TickerSymbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfUnits)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TickerSymbol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfUnits)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.OrderId  }) |
            @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
        </td>
    </tr>
}

</table>
